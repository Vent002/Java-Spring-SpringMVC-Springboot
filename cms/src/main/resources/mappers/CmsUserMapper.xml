<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.gao.cms.mapper.CmsUserMapper">
    <sql id="ref_column">
      id,
      user_name userName,
      user_age userAge,
      user_sex
    </sql>
    <select id="findById" parameterType="Integer" resultType="CmsUser">
        select 
        <include refid="ref_column"/>
        from user_info where
        id=#{id}
    </select>
</mapper>